<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.vkim.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="%perspective.name"
            class="org.vkim.ui.Perspective"
            id="org.vkim.ui.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="%view.name"
            class="org.vkim.ui.View"
            id="org.vkim.ui.view">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               standalone="true"
               minimized="false"
               relative="org.eclipse.ui.editorss"
               relationship="left"
               id="org.vkim.ui.view">
         </view>
         <newWizardShortcut
               id="org.vkim.ui.existingAccount">
         </newWizardShortcut>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="%fileMenu.label">
            <command
                  commandId="org.eclipse.ui.newWizard"
                  label="%new.label"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.views.showView"
                  label="%showView.label"
                  style="push">
            </command>
            <separator
                  name="org.vkim.ui.separator1"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="%exit.label">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            class="org.vkim.ui.wizards.ExistingAccountWizard"
            id="org.vkim.ui.existingAccount"
            name="%existingVKAccountWizard.name">
      </wizard>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.vkim.application"
            description="%product.description"
            name="VKontakteIM">
         <property
               name="appName"
               value="VKontakteIM">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="org.eclipse.ecf.presence.roster.IRoster"
            class="org.vkim.controller.ConnectivityManager">
         <adapter
               type="org.vkim.controller.Account">
         </adapter>
      </factory>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.vkim.ui.editors.Conversation"
            contributorClass="org.eclipse.ui.part.EditorActionBarContributor"
            default="false"
            id="org.vkim.ui.editors.Conversation"
            name="Conversation">
      </editor>
   </extension>
   
</plugin>
